                        //        '<td><button class="js-delete" data-customer-id="' + value.CustomerId + '">Delete</button></td>');
                        //})


                        $("#Customers .js-delete").on("click", function () {
                            if (confirm("Delete customer?")) {
                                $.ajax({
                                    url: "/api/customers/" + $(this).attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function () {
                                        UpdateTable();
                                    }
                                })
                            }
                        })
                    }
                })
            }



